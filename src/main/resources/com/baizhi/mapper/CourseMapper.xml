<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<!-- 与接口的全类名对应,包名+类名 -->
<mapper namespace="com.baizhi.dao.CourseDao">
    <insert id="insert" parameterType="com.baizhi.entity.Course">
        insert into course values (#{id},#{title},#{marking},#{creatTime});
    </insert>
    <delete id="delete" parameterType="String">
        delete from course where id=#{id}
    </delete>
    <update id="update" parameterType="com.baizhi.entity.Course">
        update course set  title=#{title},marking=#{marking},creatTime=#{creatTime} where id=#{id};
    </update>
    <select id="queryAll" resultType="com.baizhi.entity.Course">
        select * from course;
    </select>
    <select id="queryOne" parameterType="String" resultType="com.baizhi.entity.Course">
        select * from course where id=#{id};
    </select>
    <select id="queryByPage" resultType="com.baizhi.entity.Course">
          select * from course limit #{start},#{rows}
    </select>
    <select id="queryTotals" resultType="long">
        select count(id) from course
    </select>
</mapper>



